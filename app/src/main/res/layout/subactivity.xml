<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TableLayout
        android:stretchColumns="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mã số bài hát"
                android:background="@color/WHITE"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtmaso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="12345"
                android:background="@color/YELLOW"
                android:textStyle="bold"
                android:textColor="@color/RED"
                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/WHITE"
                android:text="Tên bài hát"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtbaihat"
                android:textSize="18sp"
                android:background="@color/YELLOW"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="CHÉN ĐẮNG" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/lol"
                android:background="@color/WHITE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom|center"
                android:text="Lời bài hát        "
                android:textStyle="bold"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txtloibaihat"
                android:textSize="18sp"
                android:background="@color/YELLOW"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="xxx\nxxx" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/lplsadm"
                android:background="@color/WHITE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tác giả"
                android:textStyle="bold"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txttacgia"
                android:textSize="18sp"
                android:background="@color/YELLOW"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Trương Lê Sơn" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Yêu thích"
                android:background="@color/WHITE"
                android:textStyle="bold"
                android:textSize="20sp" />

            <FrameLayout
                android:layout_width="match_parent"
                android:background="@color/YELLOW"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/btnthich"
                    android:src="@drawable/like"
                    android:background="@null"
                    android:layout_gravity="center"
                    android:scaleType="fitCenter"
                    android:layout_width="64dp"
                    android:layout_height="64dp" />

                <ImageButton
                    android:id="@+id/btnkhongthich"
                    android:background="@null"
                    android:src="@drawable/unlike"
                    android:layout_gravity="center"
                    android:scaleType="fitCenter"
                    android:layout_width="64dp"
                    android:layout_height="64dp" />


            </FrameLayout>

        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnback"
            android:background="@color/GREEN"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BACK" />
    </LinearLayout>
</LinearLayout>
